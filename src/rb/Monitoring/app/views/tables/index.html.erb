<%= render :partial => "tables" %>

<form method="get" action="/tables" >
	
	Sort by: 
	<% @sort_types.each do |type| %>
		<%= radio_button_tag "sort_by", type, (@selected_sort == type)  %><%= type.titleize %> &nbsp; &nbsp;		
	<% end %>	

	<br /><br />
	Time interval: 
	<% @time_interval.each_with_index do |interval, i| %>
		<%= radio_button_tag "time_interval", i, (@selected_index == i) %><%= interval %> &nbsp; &nbsp;
	<% end %>	
	
	<br />	
	<br />	
	<%= submit_tag "update view" %>
<%# end %>

